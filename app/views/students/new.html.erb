<h1>Create Student</h1>
<%= form_for @student do |f| %>

  <%= f.label :full_name %>
  <%= f.text_field :full_name, class: 'form-control' %>

  <%= f.label :email %>
  <%= f.hidden_field :email, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.hidden_field :password, class: 'form-control' %>

  <hr>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
