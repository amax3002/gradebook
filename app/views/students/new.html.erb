<h1>Create Student</h1>
<%= form_for @student do |f| %>

  <%= f.label :user_id %>
  <%= f.hidden_field :user_id, class: 'form-control' %>

  <%= f.fields_for :user do |u| %>

    <%= u.label :full_name %>
    <%= u.text_field :full_name, class: 'form-control' %>

  <% end %>

  <hr>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
