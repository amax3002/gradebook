<h1>Welcome to George Washington University</h1>

<%= link_to "View All Students", students_path %> |
<%= link_to "Add a new Grade", new_grade_path %> |
<%= link_to "New Student", new_student_path %> |
<%= link_to "New Parent", new_parent_path %>

<%= render @grades %>

<% if total_pages > current_page  %>
  <%= link_to "Next Page", grades_path(page: current_page + 1) %>
<% end %>
<% 10.times do |i| %>
  <%= link_to current_page + i, grades_path(page: current_page + i) %>
<% end %>
<% if current_page > 0  %>
  <%= link_to "Prev Page", grades_path(page: current_page - 1)%>
<% end %>
