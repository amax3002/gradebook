<div class="row">
  <div class="col-md-4">
    <h3>
      <%= link_to grade.title, grade_path(grade.id) %>
    </h3>

  </div>
  <div class="general_formatting">
    <div class="col-md-2">
      <%= grade.student.user.full_name %>
    </div>
    <div class="col-md-2">
      <%= grade.letter_grade%>
    </div>
    <div class="col-md-2">
      <%= grade.grade_type %>
    </div>
    <div class="col-md-2">
      <%= link_to "Delete Post", grade_path(grade.id), method: :delete, class: 'btn btn-sm btn-danger' %>
    </div>
  </div>
</div>
